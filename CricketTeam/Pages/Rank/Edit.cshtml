@page
@model CricketTeam.Pages.Rank.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ranking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ranking.Ranking_Id" />
            <div class="form-group">
                <label asp-for="Ranking.Player_Name" class="control-label"></label>
                <input asp-for="Ranking.Player_Name" class="form-control" />
                <span asp-validation-for="Ranking.Player_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.Test" class="control-label"></label>
                <input asp-for="Ranking.Test" class="form-control" />
                <span asp-validation-for="Ranking.Test" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.ODI" class="control-label"></label>
                <input asp-for="Ranking.ODI" class="form-control" />
                <span asp-validation-for="Ranking.ODI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.T20" class="control-label"></label>
                <input asp-for="Ranking.T20" class="form-control" />
                <span asp-validation-for="Ranking.T20" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.Player_ID" class="control-label"></label>
                <input asp-for="Ranking.Player_ID" class="form-control" />
                <span asp-validation-for="Ranking.Player_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
