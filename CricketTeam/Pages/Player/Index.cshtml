@page
@model CricketTeam.Pages.Player.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Players</h1>

<p>
    <a asp-page="Create">Add New Player Here</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Player_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Player_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Player_Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Player_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Player_Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Players) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player_Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player_Age)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Player_Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Player_Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Player_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
